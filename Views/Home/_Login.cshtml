@model LogUser

<h2>Login</h2>
        <form action="/user/login" method="post">
        <div class="form-group">
            <label for="LogEmail">Email</label>
            <input asp-for="LogEmail">
            <span asp-validation-for="LogEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="LogPassword">Password</label>
            <input asp-for="LogPassword">
            <span asp-validation-for="LogPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary">
        </div>
        </form>